<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#80cbc4"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/BeanItem_RL"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/checkbox_bean_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_bean_item"
            android:visibility="gone"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:src="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/name_bean_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_bean_item"
            android:text="news_title"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/content_bean_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_bean_item"
            android:layout_toEndOf="@id/image_bean_item"
            android:maxLines="2"
            android:text="112312312322"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/remarks_bean_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:text="news_state"
            android:textSize="10sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
